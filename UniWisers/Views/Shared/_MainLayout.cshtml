@{
    Layout = "/Views/Shared/_MainPageLayout.cshtml";
}

@section navBarUserInfo
{
    @RenderSection("navBarUser", required:false)
}

<!-- RIGHT SIDEBAR -->
@section MainBody
{
    <aside id="sidebar" class="sidebar">
        <div class="card">
            <div class="card-body profile-card pt-6 d-flex flex-column align-items-center">
                <br />
                @RenderSection("userInfo", required:false)   
            </div>
        </div>
    </aside>
    
    <!-- End Sidebar-->

    <!-- MAIN NEWSFEED PORTION -->
    <main id="main" class="main">
        <section class="section dashboard">
            <div class="row">
                <div class="col-lg-8">
                    <div class="row">
                        <div class="col-12">
                            <div class="card recent-sales overflow-auto">
                                <div class="card-body">
                                    <h5 class="card-title">Hello, Welcome to Uniwisers</h5>
                                    @RenderSection("PostForm", required:false)
                                </div>
                            </div>
                        </div>
                        @RenderSection("AllPosts", required:false)
                    </div>
                </div><!-- End Left side columns -->

                <!-- RIGHT SIDEBAR -->
                <div class="col-lg-4">
                    <!-- Recent Activity -->
                    <div class="card">
                        <div class="filter">
                            <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                <li class="dropdown-header text-start">
                                    <h6>Filter</h6>
                                </li>

                                <li><a class="dropdown-item" href="#">Today</a></li>
                                <li><a class="dropdown-item" href="#">This Month</a></li>
                                <li><a class="dropdown-item" href="#">This Year</a></li>
                            </ul>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">Recent Activity <span>| Today</span></h5>
                            <div class="activity">
                                <div class="activity-item d-flex">
                                    <div class="activite-label">56 min</div>
                                    <i class='bi bi-circle-fill activity-badge text-danger align-self-start'></i>
                                    <div class="activity-content">
                                        Voluptatem blanditiis blanditiis eveniet
                                    </div>
                                </div><!-- End activity item-->

                                <div class="activity-item d-flex">
                                    <div class="activite-label">2 hrs</div>
                                    <i class='bi bi-circle-fill activity-badge text-primary align-self-start'></i>
                                    <div class="activity-content">
                                        Voluptates corrupti molestias voluptatem
                                    </div>
                                </div><!-- End activity item-->
                            </div>
                        </div>
                    </div><!-- End Recent Activity -->
                </div><!-- End Right side columns -->
            </div>
        </section>
    </main><!-- End #main -->
}
